<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Cadastrar</title>
		<link rel="stylesheet" type="text/css" href="/public/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/public/css/style.css">
    </head>
	<body>
        <h1>Cadastrar</h1>
        <form action="/admin" method="post">
            <table>
                <tr>
                    <td>Login</td>
                    <td><input type="text" name="login"></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Nome Completo</td>
                    <td><input type="text" name="nome"></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td><input type="password" name="password"></td>
                    <td></td>
                </tr>
                <tr>
                    <td>E-mail</td>
                    <td><input type="text" name="email"></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Perfil</td>
                    <td><select name="perfil">
                        <option value="usuario">Usuario</option>
                        <option value="manager">Manager</option>
                    </select></td>
                    <td></td>
                </tr>
                <tr>
                    <td><input type="button" onclick="this.disabled=true; this.form.submit();" value="Enviar"></td>
                    <td><input type="button" onclick="window.location.href='/home'" value="Home" /></td>
                </tr>
            </table>
            <table>
                <thead>
                    <tr>
                        <td>Login</td>
                        <td>Nome</td>
                        <td>E-mail</td>
                        <td>Perfil</td>
                    </tr>
                </thead>
                <tbody>
                    <%	for (let i=0; i < detalhe.length; i++) {%>
    
                    <%-		app.models.auth.montaUser(app, detalhe[i]); %>
    
                    <%	} %>
                </tbody>
            </table>
        </form>
        <script type="text/javascript" src="/public/scripts/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="/public/bootstrap/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="/public/scripts/script.js"></script>
	</body>
</html>